# See https://docs.docker.com/engine/reference/builder/#dockerignore-file for more about ignoring files.

# Git directory and version control
/.git/
/.gitignore
/.gitattributes

# CI/CD files
/.github/
/.circleci/
/.gitlab-ci.yml
/.travis.yml

# Documentation (not needed in production)
/docs/
/*.md
!README.md

# Bundler config
/.bundle

# Environment files (except templates)
/.env*
!/.env*.erb
!/.env*.example

# Credentials and secrets
/config/master.key
/config/credentials/*.key

# Logs and temporary files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Pidfiles
/tmp/pids/*
!/tmp/pids/.keep

# Storage (uploaded files in development and any SQLite databases)
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Assets (will be compiled during build)
/node_modules/
/app/assets/builds/*
!/app/assets/builds/.keep
/public/assets

# Editor and IDE files
/.vscode/
/.idea/
*.swp
*.swo
*~
.DS_Store

# Test files and coverage
/test/
/spec/
/coverage/
/.rspec

# Development tools
/.devcontainer/
/.cursor/
/.junie/
/.gemini/

# Docker files (prevent recursion)
/.dockerignore
/Dockerfile*
/docker-compose*.yml
/compose*.yml

# Backup files
/backups/
*.dump
*.sql

# Mobile app (separate deployment)
/mobile/

# Build artifacts
*.gem
*.rbc
*.class
*.log

# Package manager files
package-lock.json
yarn.lock

# Local development files
/vendor/bundle/
